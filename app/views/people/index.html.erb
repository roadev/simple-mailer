<div class="row center">
  <div class="col s6">
    <h4>Total confirmadas</h4>
    <h5>
      <%= Person.by_role("assistant").by_gender("f").by_accepted(true).count %>
    </h5>
  </div>
  <div class="col s6">
    <h4>Dos días</h4>
    <h5>
      <%= Person.by_role("assistant").by_gender("f").by_days("vs").count %>
    </h5>
  </div>
</div>
<div class="row center">
  <h4>Sábado</h4>
  <h5>
    <%= Person.by_role("assistant").by_gender("f").by_days("s").count %>
  </h5>
</div>





